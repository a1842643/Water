
@{
    ViewBag.Title = "Maintain";
}
<script>
    var oTable;
    //初始設定
    $(function () {
        //初始化
        $.ajax({
            type: 'POST',
            data: '{}',
            //async: false, //啟用同步請求
            url: '@Url.Action("searchInit", "Accounts")',
            contenType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                //失敗的處理
                if (result.db_Result) {
                    alert(result.db_Result);
                    return;
                }
                //角色
                var ddlRoleHtml = "<option value=''>全部</option>";
                $.each(result.ddlRole.DropDownListLT, function (i, ddl) {
                    ddlRoleHtml += '<option value="' + ddl.Values + '">' + ddl.Text + '</option>';
                });
                $('#ddlRole').html(ddlRoleHtml);

            }, fail: function () {
                alert('匯入失敗!!');
            }
        })
        //載入Table
        //oTableSetting();
    });

    //查詢
    function QueryTable() {
        //判斷有無設定過
        if (oTable)
        { oTable.destroy(); }
        $('#tbResult').empty();
        oTableSetting();
        //重新查詢
        oTable.ajax.reload(null, false);
    }

    //重置查詢條件
    function Reset() {
        //$('#files').val('');
        //$('#ddlArea').val('');
        //$('#ddlUntil').val('');
        //$('#ddlAssessmentGroup').val('');
        //$('#ddlAreacenterName').val('');
        //$('#ddlGen_JurisName').val('');
        //$('#ddlDormName').val('');

    }

    //新增或修改
    function DoAction(ActionName, Branch_No) {
        if (ActionName == 'Modify')
            document.location.replace('@Url.Action("Edit", "BusinessUT")' + '?Branch_No=' + Branch_No);
        if (ActionName == 'Create')
            document.location.replace('@Url.Action("Create", "BusinessUT")');
        if (ActionName == 'Delete') {
            if (confirm('確認刪除'))
                document.location.replace('@Url.Action("Delete", "BusinessUT")' + '?Branch_No=' + Branch_No);
        }
    }

    //查詢Table設定
    function oTableSetting() {


        $('#Maintain').addClass('active');
        $('#Maintain').closest('ul').closest('li').addClass('active');


        var TableOptions = {
            "destroy": true,
            "oLanguage": {
                "sUrl": "../Content/datatables.net/tw.txt"
            },
            "bLengthChange": true,
            "lengthMenu": [10, 25, 50, 75, 100],
            "ordering": true,
            "searching": false,
            "iDisplayLength": 10,
            "bStateSave": false,
            "bPaginate": true,
            "scrollY": ($(window).height() - 290),
            "scrollX": true,
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "GetoTable",
            "deferLoading": 0,
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "txtAccountName", "value": $('#txtAccountName').val() });
                aoData.push({ "name": "ddlRole", "value": $('#ddlRole').val() });
            },
            "columns": [
                { "title": "帳號", "data": "AccountID" },
                { "title": "姓名", "data": "AccountName" },
                { "title": "角色", "data": "RoleName" },
                { "title": "新增人員", "data": "CreateUserName" },
                { "title": "新增時間", "data": "CreateDate" },
                { "title": "修改人員", "data": "UpdateUserName" },
                { "title": "修改時間", "data": "UpdateDate" },
                {
                    "title": "操作", "orderable": false, render: function (data, type, row) {
                        return '<button type="button" class="btn btn-primary btn-space" onclick="DoAction(\'Modify\',\'' + row.Branch_No + '\');">啟用</button>'
                            + '<button type="button" class="btn btn-primary btn-space" onclick="DoAction(\'Delete\',\'' + row.Branch_No + '\');">停用</button>';
                    }
                }
            ],
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "contentType": "application/json; charset=utf-8",
                    "type": "GET",
                    "url": sSource,
                    "data": aoData,
                    "success":
                        function (msg) {
                            fnCallback(msg);

                        }
                });
            }
        }
        oTable = $('#tbResult').DataTable(TableOptions);
    }
</script>
<section class="content-header">
    <h1>
        帳號管理
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="row vertical-align">
                        <div class="col-xs-auto">姓名:</div>
                        <div class="col-xs-2">
                            <input type="text" id="txtAccountName" />
                        </div>
                        <div class="col-xs-auto">角色:</div>
                        <div class="col-xs-2">
                            <select name="ddlRole" id="ddlRole" class="form-control"></select>
                        </div>
                        
                    </div>
                    <div class="row vertical-align">
                        <div class="col-xs-auto "><button type="button" class="btn btn-primary btn-space" onclick="QueryTable();">查 詢</button></div>
                        <div class="col-xs-auto"><button type="button" class="btn btn-primary btn-space" onclick="Reset();">重置</button></div>
                        <div class="col-xs-auto"><button type="button" class="btn btn-primary btn-space" onclick="DoAction('Create', null);">新增營業單位</button></div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tbResult" class="table table-bordered table-hover">
                        <thead>
                        </thead>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

